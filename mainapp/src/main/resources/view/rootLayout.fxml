                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Администрирование">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Команда"/>
                        <MenuItem mnemonicParsing="false" text="Разработчики"/>
                        <MenuItem mnemonicParsing="false" text="Проекты"/>
                        <MenuItem mnemonicParsing="false" text="Репозитории"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Помощь">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#ButtonAboutAction" text="О программе"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
</BorderPane>
