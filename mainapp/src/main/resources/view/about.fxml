<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane alignment="center" hgap="10" prefHeight="160.0" prefWidth="340.0" vgap="10"
          xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="org.ams.repstats.controllers.AboutController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <children>
        <VBox prefHeight="200.0" prefWidth="100.0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
            <children>
                <HBox>
                    <children>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label text="RepStats">
                            <font>
                                <Font size="20.0"/>
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS"/>
                    </children>
                </HBox>
                <HBox>
                    <children>
                        <Region HBox.hgrow="ALWAYS"/>
                        <VBox spacing="5.0">
                            <children>
                                <Label alignment="CENTER" contentDisplay="CENTER"
                                       text="Программа предназначена для статического анализа файлов репозитория в системе Git/Svn."
                                       wrapText="true"/>
                                <HBox>
                                    <children>
                                        <Region HBox.hgrow="ALWAYS"/>
                                        <Label alignment="CENTER" contentDisplay="CENTER"
                                               text="Разработчик : faystmax@gmail.com" textAlignment="CENTER"/>
                                        <Region HBox.hgrow="ALWAYS"/>
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </VBox>
                        <Region HBox.hgrow="ALWAYS"/>
                    </children>
                </HBox>
                <HBox>
                    <children>
                        <Region prefHeight="23.0" prefWidth="260.0" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="btExit" mnemonicParsing="false" onAction="#ExitButtonAction" prefHeight="25.0"
                                prefWidth="68.0" text="Закрыть" textAlignment="CENTER"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>

</GridPane>
