<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane alignment="center" hgap="10.0" prefHeight="370.0" prefWidth="480.0" vgap="10.0"
          xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="org.ams.repstats.gui.CommitsController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
    <children>
        <VBox prefHeight="343.0" prefWidth="430.0" spacing="10.0">
            <children>
                <HBox>
                    <children>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="lbName" text="Коммиты для">
                            <font>
                                <Font size="15.0"/>
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS"/>
                    </children>
                </HBox>
                <TableView fx:id="tableForCommits" prefHeight="370.0" prefWidth="410.0">
                    <columns>
                        <TableColumn fx:id="clmnMessage" prefWidth="203.0" text="Сообщение коммита"/>
                        <TableColumn fx:id="clmnDate" minWidth="0.0" prefWidth="91.0" text="Дата"/>
                        <TableColumn fx:id="clmnFilesChanged" prefWidth="113.0" text="Изменено файлов"/>
                    </columns>
                </TableView>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label text="После:">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </Label>
                        <DatePicker fx:id="datePicker" onAction="#showCommits">
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </DatePicker>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button fx:id="btExit" mnemonicParsing="false" onAction="#ExitButtonAction" text="Закрыть"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
    </children>

</GridPane>
