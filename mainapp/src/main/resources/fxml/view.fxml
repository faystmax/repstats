<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane alignment="center" hgap="10" prefHeight="500.0" prefWidth="900.0" vgap="10"
          xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="org.ams.repstats.view.FXViewInterface">
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints valignment="CENTER" vgrow="ALWAYS"/>
    </rowConstraints>
    <children>
        <BorderPane prefHeight="368.0" prefWidth="527.0" GridPane.halignment="LEFT" GridPane.hgrow="ALWAYS"
                    GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
            <top>
                <VBox prefHeight="63.0" prefWidth="600.0" BorderPane.alignment="CENTER">
                    <children>
                        <MenuBar prefHeight="27.0" prefWidth="491.0">
                            <menus>
                                <Menu mnemonicParsing="false" onAction="#ExitButtonAction" text="Файл">
                                    <items>
                                        <MenuItem mnemonicParsing="false" text="Закрыть"/>
                                    </items>
                                </Menu>
                                <Menu mnemonicParsing="false" text="Помощь">
                                    <items>
                                        <MenuItem fx:id="btAbout" mnemonicParsing="false" onAction="#ButtonAboutAction"
                                                  text="О Программе"/>
                                    </items>
                                </Menu>
                            </menus>
                        </MenuBar>
                        <HBox spacing="15.0">
                            <children>
                                <ChoiceBox fx:id="choiceBox" prefHeight="25.0" prefWidth="91.0"/>
                                <TextField fx:id="tbProject" prefHeight="25.0" prefWidth="143.0"
                                           promptText="Путь к папке" HBox.hgrow="ALWAYS"/>
                                <Button fx:id="btChoose" alignment="CENTER_RIGHT" mnemonicParsing="false"
                                        onAction="#ChooseProjectAction" text="Выбрать папку"/>
                                <Button fx:id="btOutRep" mnemonicParsing="false" onAction="#OutRepButtonAction"
                                        text="Выбрать внешний репозиторий"/>
                                <Button fx:id="btStart" mnemonicParsing="false" onAction="#start" text="Запуск"/>
                            </children>
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                            <padding>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                            </padding>
                        </HBox>
                        <Region minHeight="2.0" prefHeight="5.0" prefWidth="600.0" style="-fx-background-color: black;">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </Region>
                    </children>
                </VBox>
            </top>
            <left>
                <VBox prefHeight="318.0" prefWidth="252.0" spacing="15.0" BorderPane.alignment="CENTER_LEFT">
                    <children>
                        <Label fx:id="lbNameRep" alignment="TOP_CENTER" contentDisplay="CENTER" prefHeight="20.0"
                               prefWidth="173.0" textAlignment="CENTER">
                            <font>
                                <Font name="Arial Bold Italic" size="24.0"/>
                            </font>
                            <padding>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                            </padding>
                            <VBox.margin>
                                <Insets left="30.0"/>
                            </VBox.margin>
                        </Label>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <VBox prefHeight="111.0" prefWidth="146.0" spacing="15.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label fx:id="lbNazv"/>
                                        <Label fx:id="lbBranch"/>
                                        <Label fx:id="lbKolCommit"/>
                                    </children>
                                    <padding>
                                        <Insets bottom="15.0" right="5.0" top="15.0"/>
                                    </padding>
                                </VBox>
                                <VBox prefHeight="111.0" prefWidth="107.0" spacing="15.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label fx:id="lbNazvCur"/>
                                        <Label fx:id="lbBranchCur"/>
                                        <Label fx:id="lbKolCommitCur"/>
                                    </children>
                                    <padding>
                                        <Insets bottom="15.0" right="15.0" top="15.0"/>
                                    </padding>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                    <BorderPane.margin>
                        <Insets/>
                    </BorderPane.margin>
                    <padding>
                        <Insets bottom="10.0" left="5.0" right="10.0" top="10.0"/>
                    </padding>
                </VBox>
            </left>
            <center>
                <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <Region minWidth="-Infinity" prefHeight="418.0" prefWidth="3.0"
                                style="-fx-background-color: black;"/>
                        <TabPane prefHeight="418.0" prefWidth="644.0" tabClosingPolicy="UNAVAILABLE">
                            <tabs>
                                <Tab text="Авторы">
                                    <content>
                                        <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                                            <children>
                                                <TableView fx:id="avtorTable" prefHeight="369.0" prefWidth="531.0">
                                                    <columns>
                                                        <TableColumn fx:id="clmnAvtorName" prefWidth="100.0"
                                                                     text="Имя Автора"/>
                                                        <TableColumn fx:id="clmnCommitCount" prefWidth="110.0"
                                                                     text="Кол-во коммитов"/>
                                                        <TableColumn fx:id="clmnLinesAdd" prefWidth="113.0"
                                                                     text="Строк добавлено"/>
                                                        <TableColumn fx:id="clmnLinesDelete" prefWidth="101.0"
                                                                     text="Строк удалено"/>
                                                        <TableColumn fx:id="clmnNetContribution" prefWidth="98.0"
                                                                     text="Чистый вклад"/>
                                                    </columns>
                                                </TableView>
                                                <VBox prefHeight="200.0" prefWidth="100.0">
                                                    <children>
                                                        <Region prefHeight="26.0"/>
                                                        <Button fx:id="btShowCommits" mnemonicParsing="false"
                                                                onAction="#ShowCommitsButtonAction" prefHeight="42.0"
                                                                prefWidth="99.0" text="Показать  коммиты"
                                                                textAlignment="CENTER" wrapText="true"/>
                                                    </children>
                                                </VBox>
                                            </children>
                                            <padding>
                                                <Insets bottom="10.0" left="9.0" right="10.0" top="10.0"/>
                                            </padding>
                                        </HBox>
                                    </content>
                                </Tab>
                                <Tab text="Все файлы">
                                    <content>
                                        <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                                            <children>
                                                <TableView fx:id="tableAllFiles" prefHeight="369.0" prefWidth="621.0">
                                                    <columns>
                                                        <TableColumn fx:id="clmnPath" prefWidth="369.0" text="Путь"/>
                                                        <TableColumn fx:id="clmnIsBinary" minWidth="0.0"
                                                                     prefWidth="110.0" text="Бинарник"/>
                                                        <TableColumn fx:id="clmnLOC" prefWidth="140.0"
                                                                     text="Кол-в строк"/>
                                                    </columns>
                                                </TableView>
                                            </children>
                                            <padding>
                                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                            </padding>
                                        </HBox>
                                    </content>
                                </Tab>
                            </tabs>
                        </TabPane>
                    </children>
                </HBox>
            </center>
        </BorderPane>
    </children>
</GridPane>
